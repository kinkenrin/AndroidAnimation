<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.king.androidanimation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".viewAnimation.ViewAnimationActivity" />
        <activity android:name=".viewAnimation.DynamicViewAnimActivity" />
        <activity android:name=".PointViewAnimActivity" />
        <activity android:name=".FontViewActivity" />
        <activity android:name=".PaintViewActivity" />
        <activity android:name=".RedPointViewActivity" />
        <activity android:name=".TelescopeViewActivity" />
        <activity android:name=".RecyclerViewActivity" />
    </application>

</manifest>